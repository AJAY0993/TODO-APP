            //     })

            // })


            addBtn.addEventListener('click', () => {
                form.style.display = 'block';
                container.style.display = 'none'
            })
            function loadTodos() {
                fetch(`/getTodos/user?email=${user.email}&password=${user.password}`)
                    .then(res => res.json())
                    .then(res => {
                        console.log(res)
                        if (res.length > 0) {
                            todolist.innerHTML = ''
                            createTodos(res)
                            deleteBtn = document.querySelectorAll('.remove-todo-btn');
                            deleteBtn.forEach((btn, i) => {
                                btn.addEventListener('click', (e) => {
                                    const id = i
                                    const email = document.querySelector('#email-u').innerText.trim()
                                    const password = document.querySelector('#password-u').innerText.trim()
                                    console.log(email, password)
                                    const todo = {
                                        email, id, password
                                    }
                                    fetch('/deleteTodo', {
                                        method: 'PUT',
                                        headers: {
                                            'Content-Type': 'application/json'
                                        },
                                        body: JSON.stringify(todo)
                                    })
                                        .then(data => data.json())
                                        .then(data => loadTodos())
                                        .catch(err => console.log(err))
                                })

                            })

                        }
                        else {
                            todolist.innerHTML = '<h1>Start adding todos</h1>'
                        }
                    })
                    .catch(err => console.log(err))
            }
            function createTodos(data) {
                todolist.innerHTML = ''
                data.forEach((todo, i) => {
                    console.log(todo)
                    const li = document.createElement('li')
                    li.innerHTML = `<li class="todo-list-item">
                    <span class=${todo.category.toLowerCase()}>${todo.category}</span>
                    <div class="">
                        <h3 class="todo-title">
                            ${todo.title}
                        </h3>
                        <p class="todo-description">
                            ${todo.description}
                        </p>
                    </div>
                    <button class="mark-completed-btn">âœ”</button>
                    <button class="remove-todo-btn" data-id= ${i}>---</button>
                </li>`
                    todolist.appendChild(li)
                })
            }


        </script>
